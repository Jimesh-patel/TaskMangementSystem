@model TaskMangementSystem.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Task Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #4A90E2, #9013FE); /* Same gradient background as login page */
            height: 100vh; /* Full viewport height */
            display: flex; /* Flexbox for centering */
            align-items: center; /* Vertical centering */
            justify-content: center; /* Horizontal centering */
            font-family: Arial, sans-serif; /* Font styling */
        }

        .register-container {
            background-color: white; /* White background for the form */
            padding: 40px; /* Inner padding */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Subtle shadow effect */
            max-width: 400px; /* Maximum width */
            width: 100%; /* Full width */
        }

        h2 {
            text-align: center; /* Centered heading */
            color: #0000A3; /* Heading color */
            margin-bottom: 30px; /* Space below heading */
        }

        .btn-primary {
            background-color: #4A90E2; /* Primary button color */
            border-color: #4A90E2; /* Button border color */
            width: 100%; /* Full-width button */
        }

        .form-group label {
            font-weight: bold; /* Bold labels */
            color: #333; /* Label color */
        }

        .register-link {
            display: block; /* Block display for link */
            text-align: center; /* Centered link */
            margin-top: 20px; /* Space above link */
        }

            .register-link a {
                text-decoration: none; /* No underline for link */
                color: #7272FF; /* Link color */
            }
    </style>
</head>
<body>
    <div class="register-container">
        <h2>Register</h2>

        <form asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span> 
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span> 
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            }

            <button type="submit" class="btn btn-primary">Register</button>
        </form>

        <div class="register-link">
            <span>Already have an account? </span>
            <a asp-action="Login">Login here</a> 
        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial") 
    }
</body>
</html>
